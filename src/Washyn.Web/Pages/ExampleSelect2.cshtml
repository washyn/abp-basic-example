@page
@using Washyn.Web.Bundling.Select2
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Volo.Abp.AspNetCore.Mvc.UI.Bundling.TagHelpers
@model Washyn.Web.Pages.ExampleSelect2

@{
    // Layout = null;
}

@section styles
{
    <abp-style type="typeof(Select2BoostrapStyleContributor)"></abp-style>
}

@section scripts
{
    <abp-script type="typeof(Select2BoostrapScriptContributor)"></abp-script>
    <abp-script type="typeof(Select2FixScriptContributor)"></abp-script>
}

<div class="card">
    <div class="card-body">
        <form action="">
            @*  *@
            <select asp-for="Prueba.Id"
                    class="auto-complete-select"
                    multiple="multiple"
                    data-autocomplete-api-url="/api/app/prueba"
                    data-autocomplete-display-property="nombre"
                    data-autocomplete-value-property="id"
                    data-autocomplete-items-property="items"
                    data-autocomplete-filter-param-name="filter">

                <!-- You can define selected option(s) here  -->
                @* <option selected value="@Model.Prueba.Id">@Model.Prueba.Nombre</option> *@
            </select>
        </form>
    </div>
</div>

